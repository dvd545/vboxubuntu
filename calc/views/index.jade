extends layout
block content
	h1 = title
	p calculation function :#{calcf}
	p First Number: #{x}
	p Second Number: #{y}
	p Answer: #{solution}
	
	#calcForm
	 form(name="calc", action="/calculator", method="get")
	  label Calculation
	  select(name=calculation")
	   option(value="add", selected) Add
	   option(value="subtract") Subtract
	   option(value="multiply") Multiply
	   option(value="divide") Divide
	  br
	  br
	  input(type="number", name="x", placeholder="First Number")
	  br
	  br
	  input(type="number", name="y", placeholder="Second Number")
	  br
	  br
	  input(type="submit", value="GO")
	  
  br  
  #qunit
  #qunit-fixture
  script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
  script(src="javascripts/plugins.js")